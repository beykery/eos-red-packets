textBox()
  & > p
    display flex
    justify-content space-between
    font-size 14px
    & > span:first-child
      color #5D4220
    & > span:last-child
      color #288EFB
  .tip_text
    color #A69987
    font-size 12px
  .text
    min-height 48px
    width 100%
    margin-top 4px
    background-color #F8F8F8
    &.packetStr
      background-color #fffcdd
    input, textarea
      background-color #F8F8F8
      padding 13px 15px
      box-sizing border-box
      outline none
      border none
      width 100%
      height 100%
      resize none
      font-size 14px
      font-weight 300
      &.packetStr
        background-color #fffcdd
  .router-link
    text-align right
    margin-top 4px
    a 
      font-size 14px
      color #288efb
      text-decoration none
